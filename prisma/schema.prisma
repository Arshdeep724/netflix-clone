generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName    String
  lastName     String
  email        String   @unique
  mobileNumber String?
  password     String
  resetCode    String?
  lastLogin    DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt
}
